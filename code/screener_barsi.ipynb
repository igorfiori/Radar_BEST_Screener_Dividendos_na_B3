   "source": [
    "# Inicia o processo\n",
    "tickers_b3 = obter_todos_tickers_da_b3()\n",
    "resultados_finais = []\n",
    "\n",
    "if tickers_b3:\n",
    "    print(\"\\n--- Iniciando Radar BEST+ (com Preço-Teto) ---\")\n",
    "    \n",
    "    for i, ticker in enumerate(tickers_b3):\n",
    "        # Imprime o progresso da análise\n",
    "        print(f\"\\rAnalisando ({i+1}/{len(tickers_b3)}): {ticker.ljust(12)}\", end=\"\", flush=True)\n",
    "        \n",
    "        try:\n",
    "            # Criamos o objeto ticker primeiro para reutilizá-lo\n",
    "            ticker_obj = yf.Ticker(ticker)\n",
    "            info = ticker_obj.info\n",
    "            \n",
    "            setor = info.get('sector', 'N/A')\n",
    "            if setor not in SETORES_BARSI:\n",
    "                continue\n",
    "            \n",
    "            # Calcula o score base de 4 pontos\n",
    "            score = calcular_best_score(info)\n",
    "            \n",
    "            # Calcula o Preço-Teto usando a nova função\n",
    "            preco_teto = calcular_preco_teto(ticker_obj)\n",
    "            preco_atual = info.get('regularMarketPrice')\n",
    "            \n",
    "            # Adiciona o 5º critério ao score\n",
    "            # A empresa só ganha o ponto se tiver um preço-teto calculado ( > 0 )\n",
    "            # e se o preço atual for menor que o teto.\n",
    "            abaixo_do_teto = False\n",
    "            if preco_teto and preco_atual and preco_atual < preco_teto:\n",
    "                score += 1\n",
    "                abaixo_do_teto = True\n",
    "            \n",
    "            if score >= SCORE_MINIMO_PARA_EXIBIR:\n",
    "                resultados_finais.append({\n",
    "                    'Ticker': ticker,\n",
    "                    'Empresa': info.get('shortName', 'N/A'),\n",
    "                    'Setor': setor,\n",
    "                    'BEST+ Score': f\"{score}/5\",\n",
    "                    'Preço Atual': preco_atual, \n",
    "                    'Preço-Teto': preco_teto,   \n",
    "                    'Abaixo do Teto?': \"Sim\" if abaixo_do_teto else \"Não\", \n",
    "                    'DY (%)': info.get('dividendYield'),
    "                    'P/L': info.get('trailingPE'),\n",
    "                    'Dívida/PL': (info.get('debtToEquity') or 0) / 100\n",
    "                })\n",
    "            \n",
    "            time.sleep(PAUSA_ENTRE_REQUISICOES)\n",
    "            \n",
    "        except Exception:\n",
    "            continue\n",
    "\n",
    "print(\"\\n\\nAnálise concluída!\")"
   ]
